{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./src/main/resources/static/js/dist",
    "rootDir": "./src/main/resources/static/js/src",
    "baseUrl": "./src/main/resources/static/js/src",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["src/main/resources/static/js/src/**/*"],
  "exclude": ["node_modules"]
} 